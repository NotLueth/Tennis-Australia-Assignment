@model TennisAustraliaAssignment.Models.Player

@{
    ViewData["Title"] = "Edit";
}
<!-- Header of Page -->
<h1>Edit</h1>
<!-- Header of area -->
<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Tennis Membership Number Field -->
            <div class="form-group">
                <label asp-for="TennisMembershipNumber" class="control-label"></label>
                <input asp-for="TennisMembershipNumber" class="form-control" />
                <span asp-validation-for="TennisMembershipNumber" class="text-danger"></span>
            </div>
            <!-- Australia Ranking Field -->
            <div class="form-group">
                <label asp-for="AustralianRanking" class="control-label"></label>
                <input asp-for="AustralianRanking" class="form-control" />
                <span asp-validation-for="AustralianRanking" class="text-danger"></span>
            </div>
            <!-- Universal Tennis Rating Field -->
            <div class="form-group">
                <label asp-for="UniversalTennisRating" class="control-label"></label>
                <input asp-for="UniversalTennisRating" class="form-control" />
                <span asp-validation-for="UniversalTennisRating" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PersonalID" />
            <!-- First Name Field -->
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <!-- Last Name Field -->
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <!-- Age Field -->
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <!-- Street Field -->
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <!-- City Field -->
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <!-- PostCode Field -->
            <div class="form-group">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <!-- Email Field -->
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <!-- Phone Field -->
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <!-- Save button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
