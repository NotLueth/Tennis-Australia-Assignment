@model IEnumerable<TennisAustraliaAssignment.Models.AgeBracket>

@{
    ViewData["Title"] = "Index";
}
<!-- Header of area and page-->
<h1>Age Bracket</h1>

<p>
    <!-- Create button -->
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.AgeBracketName)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.AgeBracketDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.AgeBracketName)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.AgeBracketDescription)
            </td>
            <!-- Edit, details and delete options -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.AgeBracketID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AgeBracketID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AgeBracketID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
