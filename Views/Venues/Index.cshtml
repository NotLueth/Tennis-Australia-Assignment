@model IEnumerable<TennisAustraliaAssignment.Models.Venue>

@{
    ViewData["Title"] = "Index";
}
<!-- Header of area and page-->

<h1>Venue List</h1>

<p>
    <!-- Create button -->
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Surface)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Surface.SurfaceName)
            </td>
            <!-- Edit, details and delete options -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenueID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenueID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenueID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
