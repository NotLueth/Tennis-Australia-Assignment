@model IEnumerable<TennisAustraliaAssignment.Models.PersonalDetails>

@{
    ViewData["Title"] = "Index";
}
<!-- Header of area and page-->
<h1>Personal Details</h1>

<p>
    <!-- Create button -->
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <!-- Column Name -->
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Postcode)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <!-- Information of Column -->
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <!-- Edit, details and delete options -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonalID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonalID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonalID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
