@model TennisAustraliaAssignment.Models.Match

@{
    ViewData["Title"] = "Create";
}
<!-- Header of Page -->
<h1>Create</h1>

<!-- Header of area -->
<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Round Field -->
            <div class="form-group">
                <label asp-for="Round" class="control-label"></label>
                <input asp-for="Round" class="form-control" />
                <span asp-validation-for="Round" class="text-danger"></span>
            </div>
            <!-- Tournament Bracket ID Field -->
            <div class="form-group">
                <label asp-for="TournamentBracketID" class="control-label"></label>
                <select asp-for="TournamentBracketID" class="form-control" asp-items="ViewBag.TournamentBracketID"></select>
            </div>
            <!-- First Registration ID Field -->
            <div class="form-group">
                <label asp-for="FirstRegistrationID" class="control-label"></label>
                <select asp-for="FirstRegistrationID" class="form-control" asp-items="ViewBag.RegistrationID"></select>
            </div>
            <!-- Second Registration ID Field -->
            <div class="form-group">
                <label asp-for="SecondRegistrationID" class="control-label"></label>
                <select asp-for="SecondRegistrationID" class="form-control" asp-items="ViewBag.RegistrationID"></select>
            </div>
            <!-- Save button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
